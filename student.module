/*
 * Validation callback for the student property 'uid'.
 *
 * @see student_entity_property_info()
 */
function student_validate_uid($uid) {
  if (is_numeric($uid) && $account = user_load($uid)) {
    return TRUE;
  }
  return FALSE;
}

