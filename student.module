/**
 * Return information about student types in a structured array, keyed by
 * each type's machine name. Each element is also a structured array defining at
 * least 'name'.
 *
 * This uses hook_student_type_info() to allow other modules to define types.
 *
 * @return array
 */
function student_types() {
  $types = &drupal_static(__FUNCTION__);
  if (empty($types)) {
    $types = array();
    $types += module_invoke_all('student_type_info');
  }
  return $types;
}

/**
 * Load student type information by its machine name.
 *
 * @param string $machine_name
 *   The machine name of the type.
 * @return mixed
 *   A stdClass election type object, or FALSE on failure.
 */
function student_type_get_info($machine_name) {
  $type = array(
    'name' => t('Unknown type'),
  );
  $types = student_types();
  if (isset($types[$machine_name])) {
    $type = $types[$machine_name];
  }
  return $type;
}

