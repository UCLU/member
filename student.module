/**
 * Generate an array for rendering the given student.
 *
 * @param $student
 *   An student object.
 * @param $view_mode
 *   View mode, e.g. 'full', 'teaser'...
 *
 * @return
 *   An array as expected by drupal_render().
 */
function student_view($student, $view_mode = 'full') {

  // Remove previously built content, if it exists.
  $student->content = array();

  $label = entity_label('student', $student);

  if ($view_mode == 'teaser') {
    $student->content['title'] = array(
      '#markup' => filter_xss($label),
      '#weight' => -5,
    );
  }
  else {
    drupal_set_title($label);
  }

  // Build fields content.
  // In case of a multiple view, node_view_multiple() already ran the
  // 'prepare_view' step. An internal flag prevents the operation from running
  // twice.
  field_attach_prepare_view('student', array($student->student_id => $student), $view_mode);
  entity_prepare_view('student', array($student->student_id => $student));
  $student->content += field_attach_view('student', $student, $view_mode);

  $build = $student->content;
  // We don't need duplicate rendering info in student->content.
  unset($student->content);

  $build += array(
    '#theme' => 'student',
    '#student' => $student,
    '#view_mode' => $view_mode,
  );

  // Add contextual links for this student, except when the student is already being
  // displayed on its own page. Modules may alter this behavior (for example,
  // to restrict contextual links to certain view modes) by implementing
  // hook_student_view_alter().
  if (!empty($student->student_id) && $view_mode != 'full') {
    $build['#contextual_links']['student'] = array('student', array($student->student_id));
  }

  // Allow modules to modify the structured student.
  $type = 'student'; // $type is passed by reference to drupal_alter() so it must be a variable.
  drupal_alter(array('student_view', 'entity_view'), $build, $type);

  return $build;

}

/**
 * Process variables for student.tpl.php
 *
 * The $variables array contains the following arguments:
 * - $student
 * - $view_mode
 * - $page
 *
 * @see student.tpl.php
 */
function template_preprocess_student(&$variables) {

  $variables['view_mode'] = $variables['elements']['#view_mode'];

  // Provide a distinct $teaser boolean.
  $variables['teaser'] = $variables['view_mode'] == 'teaser';

  // Provide a distinct $page boolean.
  $variables['page']      = $variables['view_mode'] == 'full';

  $variables['student'] = $variables['elements']['#student'];
  $student = $variables['student'];

  $uri = entity_uri('student', $student);
  $variables['student_url'] = url($uri['path'], $uri['options']);
  $variables['label']     = check_plain(entity_label('student', $student));

  // Fill the $username variable.
  $student_account = empty($student->uid)? FALSE : user_load($student->uid);
  $variables['username'] = empty($student_account)?  FALSE : theme('username', array('account' => $student_account));

  // Fill the $uuid variable.
  $variables['uuid'] = empty($student->uuid)? FALSE : check_plain($student->uuid);

  $variables = array_merge((array) $student, $variables);

  $variables += array('content' => array());
  foreach (element_children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }

  field_attach_preprocess('student', $student, $variables['content'], $variables);

  $variables['classes_array'][] = drupal_html_class('student-type-' . $student->type);

  $variables['theme_hook_suggestions'][] = 'student__' . $student->type;
  $variables['theme_hook_suggestions'][] = 'student__' . $student->student_id;

}